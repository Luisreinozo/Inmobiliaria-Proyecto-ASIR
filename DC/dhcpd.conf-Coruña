# dhcpd.conf
#
# En el archivo original he dejado todas las lineas comentadas que vinen con el archivo original, para este he dejado unicamente los mas importantes y solo la configuraci√≥n no comentada.

# option definitions common to all supported networks...
option domain-name "inmobiliaria.local";
option domain-name-servers 10.0.2.21, 10.0.4.21;

default-lease-time 3600;
max-lease-time 7200;

# The ddns-updates-style parameter controls whether or not the server will attempt to do a DNS update when a lease is confirmed.
ddns-update-style interim;
update-static-leases on;


# If this DHCP server is the official DHCP server for the local network, the authoritative directive should be uncommented.
authoritative;

# Use this to send dhcp log messages to a different log file
log-facility local7;

subnet 10.0.2.0 netmask 255.255.255.0 {
    range 10.0.2.100 10.0.2.150;
    option routers 10.0.2.1;
    option subnet-mask 255.255.255.0;
    option domain-name-servers 10.0.2.21;
    option domain-search "inmobiliaria.local";
    ddns-domainname "inmobiliaria.local.";
    ddns-rev-domainname "2.0.10.in-addr.arpa.";
    default-lease-time 86400;
    max-lease-time 172800;
}
